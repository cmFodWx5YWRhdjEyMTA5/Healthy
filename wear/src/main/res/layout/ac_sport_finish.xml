<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x70"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sportDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/font_txt_content_3"
            android:textSize="@dimen/x72" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x12"
            android:text="km"
            android:textColor="@color/font_txt_content_1"
            android:textSize="@dimen/x36" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动总时长"
            android:textSize="@dimen/x32"
            android:textColor="@color/font_txt_content_1"/>

        <TextView
            android:id="@+id/sportFinishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:text="--"
            android:textSize="@dimen/x32"
            android:textColor="@color/font_txt_content_1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x52"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sportContinue"
            android:layout_width="@dimen/x136"
            android:layout_height="@dimen/y51"
            android:background="@drawable/bg_sport_blue_radius"
            android:gravity="center"
            android:text="继续"
            android:textColor="@color/font_txt_content_3"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/sportFinish"
            android:layout_width="@dimen/x136"
            android:layout_height="@dimen/y51"
            android:layout_marginStart="@dimen/x10"
            android:background="@drawable/bg_sport_gray_radius"
            android:gravity="center"
            android:text="结束"
            android:textColor="@color/white"
            android:textSize="@dimen/x32" />
    </LinearLayout>
</LinearLayout>