<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x280"
        android:layout_height="@dimen/x93"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/x20"
        android:background="@drawable/bg_home_blcak_radius"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/historyIcon"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_margin="@dimen/x12"
            android:src="@drawable/huwai_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2017/08/22 "
                android:textColor="@color/white"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/tv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"
                android:text="--:--"
                android:layout_below="@+id/tv_item_date"
                android:textColor="@color/font_txt_content_2"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/tv_item_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"
                android:text="--km"
                android:layout_below="@+id/tv_item_date"
                android:layout_marginLeft="@dimen/x24"
                android:layout_toRightOf="@+id/tv_item_time"
                android:textColor="@color/font_txt_content_2"
                android:textSize="@dimen/x28"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>