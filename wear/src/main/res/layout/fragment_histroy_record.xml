<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sr_history_refresh"
    android:background="@color/app_main_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10dip"
            android:padding="20dip"
            android:text="历史记录"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/app_main_text_clolor"
            android:textSize="@dimen/x25" />

        <com.amsu.wear.view.SwipeListView
            android:layout_below="@+id/rl_base_head"
            android:id="@+id/lv_history_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.amsu.wear.view.SwipeListView>

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
