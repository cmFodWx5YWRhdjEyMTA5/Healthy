<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x280"
        android:layout_height="@dimen/x92"
        android:layout_marginBottom="@dimen/x20"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_home_blcak_radius"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x36"
            android:layout_margin="@dimen/x12"
            android:src="@drawable/yifu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:textColor="#FFF"
                android:text="aaa"
                android:textSize="@dimen/x28"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"
                android:text="未连接"
                android:textColor="#707070"
                android:textSize="@dimen/x16" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>