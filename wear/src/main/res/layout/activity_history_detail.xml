<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x56"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x64"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/historyIcon"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:src="@drawable/huwai_4" />

                <TextView
                    android:id="@+id/detailsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x28"
                    android:textColor="@color/font_txt_content_3"
                    android:textSize="@dimen/x25" />

                <TextView
                    android:id="@+id/detailsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:textColor="@color/font_txt_content_3"
                    android:textSize="@dimen/x25" />
            </LinearLayout>

            <TextView
                android:id="@+id/detailsDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x64"
                android:layout_marginTop="@dimen/x11"
                android:textColor="@color/font_txt_content_3"
                android:textSize="@dimen/x112" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x64"
                android:layout_marginTop="@dimen/x16"
                android:text="@string/home_ui_history_content_1"
                android:textColor="@color/font_txt_content_3"
                android:textSize="@dimen/x28" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x64"
                    android:text="@string/home_ui_history_content_2"
                    android:textColor="@color/font_txt_content_3"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/detailsDataTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x188"
                    android:textColor="@color/font_txt_content_4"
                    android:textSize="@dimen/x28" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x64"
                    android:text="@string/home_ui_history_content_3"
                    android:textColor="@color/font_txt_content_3"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/detailsHR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x124"
                    android:layout_marginStart="@dimen/x188"
                    android:textColor="@color/font_txt_content_4"
                    android:textSize="@dimen/x28" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x64"
                    android:text="@string/home_ui_history_content_4"
                    android:textColor="@color/font_txt_content_3"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/detailsSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x124"
                    android:layout_marginStart="@dimen/x188"
                    android:textColor="@color/font_txt_content_4"
                    android:textSize="@dimen/x28" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x64"
                    android:text="@string/home_ui_history_content_5"
                    android:textColor="@color/font_txt_content_3"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/detailsCAL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x124"
                    android:layout_marginStart="@dimen/x188"
                    android:textColor="@color/font_txt_content_4"
                    android:textSize="@dimen/x28" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x64"
                    android:text="@string/home_ui_history_content_6"
                    android:textColor="@color/font_txt_content_3"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/detailsCadence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x124"
                    android:layout_marginStart="@dimen/x188"
                    android:textColor="@color/font_txt_content_4"
                    android:textSize="@dimen/x28" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>