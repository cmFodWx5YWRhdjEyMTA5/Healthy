<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:angle="90" android:endColor="#f5317a" android:startColor="#fe5493" android:type="linear" />

            <corners android:radius="5dip" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:angle="90" android:endColor="#FF0000" android:startColor="#FF0000" android:type="linear" />

            <corners android:radius="5dip" />

        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:angle="90" android:endColor="#cc2f55" android:startColor="#cc317a" android:type="linear" />

            <corners android:radius="5dip" />

        </shape>
    </item>
</selector>
