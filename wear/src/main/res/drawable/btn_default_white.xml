<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="270" android:endColor="@color/transparent6" android:startColor="@color/transparent6" />
            <corners android:radius="5dip" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
            <corners android:radius="5dip" />
            <stroke android:width="0.5dip" android:color="@color/transparent2" />
        </shape>
    </item>

</selector>