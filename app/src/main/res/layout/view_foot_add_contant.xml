<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_sos_add"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y140"
        android:clickable="true"
        android:onClick="addSosNumber"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:background="@drawable/list_item_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加紧急联系人"
            android:textColor="#030303"
            android:textSize="@dimen/x48"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_sos_add"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/x56"
            android:src="@drawable/more_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#D1D1D1"

        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x320"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求助信息"
            android:textColor="#1a1a1a"
            android:textSize="@dimen/x48"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x40"/>
        <EditText
            android:id="@+id/ed_sos_sosinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入求助信息..."
            android:layout_marginTop="@dimen/x24"
            android:textColor="#c7c7c7"
            android:textSize="@dimen/x48"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>