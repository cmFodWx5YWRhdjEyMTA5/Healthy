<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.fragment.HRVFragment">

    <RelativeLayout
        android:id="@+id/rl_ecg_top"
        android:layout_width="match_parent"
        android:background="#999"
        android:padding="10dp"
        android:layout_height="@dimen/y712">

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_ecg_top"
        android:background="#FFFFFF"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:layout_marginTop="@dimen/y52">
        <TextView
            android:id="@+id/tv_hrv_ala1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/x48"
            android:text="HRV分析"/>
        <TextView
            android:id="@+id/tv_hrv_ala2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrv_ala1"
            android:layout_marginTop="@dimen/y16"
            android:textColor="#8bc34a"
            android:textSize="@dimen/x48"
            android:text="良好"/>

        <TextView
            android:id="@+id/tv_hrv_ala3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrv_ala2"
            android:layout_marginTop="@dimen/y24"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/x48"
            android:text="健康意见"/>
        <TextView
            android:id="@+id/tv_hrv_ala4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrv_ala3"
            android:layout_marginTop="@dimen/y18"
            android:textColor="#333333"
            android:textSize="@dimen/x40"
            android:text="年轻人出现心动过速。是因为青春期的神经功能一般都稳定，很容易出现紊乱或功能失调。不过这只是短暂障碍，不需要治疗，过了青春期就自愈了。"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y54">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/y124"
                android:textSize="@dimen/x50"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_bt_bigcircle"
                android:text="历史记录"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/y124"
                android:textSize="@dimen/x50"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="@dimen/x180"
                android:background="@drawable/bg_bt_bigcircle"
                android:text="我的报告"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
