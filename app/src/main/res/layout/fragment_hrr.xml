<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.fragment.analysis.HRVFragment">

    <RelativeLayout
        android:id="@+id/rl_rate_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/tv_hrr_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y64"
            android:text="心率恢复能力"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/x48"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_hrr_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrr_text1"
            android:layout_marginTop="@dimen/y10"
            android:text="--"
            android:textColor="#000000"
            android:textSize="@dimen/x259"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_rate_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrr_value"
            android:layout_marginTop="@dimen/y20"
            android:text="BMP"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/x36"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_rate_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rate_text3"
            android:layout_marginTop="@dimen/y120"
            android:text="以上数值为你当前的心率恢复值"
            android:textColor="#333333"
            android:textSize="@dimen/x48"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x72"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_rate_top"
        android:background="#FFFFFF"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:layout_marginTop="@dimen/y52">
       <!-- <TextView
            android:id="@+id/tv_hrv_ala1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/x48"
            android:text="HRR分析"/>
        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_toRightOf="@id/tv_hrv_ala1"
            android:layout_marginTop="@dimen/y53"
            android:layout_marginLeft="5dp"
            android:src="@drawable/guanyu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y55"
            android:layout_toRightOf="@id/tv_hrv_ala1"
            android:layout_marginLeft="@dimen/x60"
            android:textColor="#0c64b5"
            android:textSize="@dimen/x32"
            android:text="关于HRR"/>
        <TextView
            android:id="@+id/tv_hrr_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrv_ala1"
            android:layout_marginTop="@dimen/y16"
            android:textColor="#8bc34a"
            android:textSize="@dimen/x48"
            android:text="良好"/>
-->
        <TextView
            android:id="@+id/tv_hrv_ala3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/x48"
            android:text="健康意见"/>
        <TextView
            android:id="@+id/tv_hrr_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrv_ala3"
            android:layout_marginTop="@dimen/y18"
            android:textColor="#333333"
            android:textSize="@dimen/x40"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y54">
            <Button
                android:id="@+id/bt_hrv_history"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/y124"
                android:textSize="@dimen/x50"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_bt_bigcircle"
                android:text="历史记录"/>
            <Button
                android:id="@+id/bt_hrv_myreport"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/y124"
                android:textSize="@dimen/x50"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="@dimen/x180"
                android:background="@drawable/bg_bt_bigcircle"
                android:text="我的报告"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
