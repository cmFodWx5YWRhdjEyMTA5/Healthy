<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:context="com.amsu.healthy.fragment.analysis.HRVFragment">

    <RelativeLayout
        android:id="@+id/rl_rate_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/tv_hrr_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y64"
            android:text="@string/hrr_heart_rate_recovery"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/x48"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_hrr_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrr_text1"
            android:layout_marginTop="@dimen/y10"
            android:text="--"
            android:textColor="#000000"
            android:textSize="@dimen/x259"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_rate_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hrr_value"
            android:layout_marginTop="@dimen/y20"
            android:text="BMP"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/x36"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_rate_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rate_text3"
            android:layout_marginTop="@dimen/y120"
            android:text="@string/hrr_heart_rate_recovery"
            android:textColor="#333333"
            android:textSize="@dimen/x48"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x72"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_rate_top"
        android:background="#FFFFFF"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:layout_marginTop="@dimen/y52">
