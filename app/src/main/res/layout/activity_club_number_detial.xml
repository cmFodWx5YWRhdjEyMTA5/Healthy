<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_club_number_detial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.activity.ClubNumberDetialActivity">

    <include layout="@layout/page_head"
        android:id="@+id/rl_base_head">
    </include>



    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/deiver_horiz_line"
        android:layout_below="@+id/rl_base_head"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="@dimen/x40"
                android:textColor="#555555"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"/>
            <TextView
                android:id="@+id/tv_numberdetial_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="@dimen/x40"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text1"
                android:layout_marginLeft="@dimen/x40"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128">
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="@dimen/x40"
                android:textColor="#555555"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"/>
            <TextView
                android:id="@+id/tv_numberdetial_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="@dimen/x40"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text2"
                android:layout_marginLeft="@dimen/x40"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128">
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textSize="@dimen/x40"
                android:textColor="#555555"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"/>
            <TextView
                android:id="@+id/tv_numberdetial_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="@dimen/x40"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text3"
                android:layout_marginLeft="@dimen/x40"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128">
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="@dimen/x40"
                android:textColor="#555555"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"/>
            <TextView
                android:id="@+id/tv_numberdetial_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/x40"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text5"
                android:layout_marginLeft="@dimen/x40"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x128"
                android:text="会员简介"
                android:textSize="@dimen/x40"
                android:gravity="center_vertical"
                android:textColor="#555555"
                android:layout_marginLeft="@dimen/x36"/>
            <TextView
                android:id="@+id/tv_numberdetial_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍"
                android:textSize="@dimen/x40"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_below="@+id/text4"
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginBottom="@dimen/x20"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x128"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:layout_below="@+id/content"
        android:layout_marginTop="@dimen/x94">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x128"
            android:text="移除俱乐部"
            android:textSize="@dimen/x52"
            android:textColor="#333333"
            android:onClick="removeClub"
            android:background="@drawable/bg_bt_rec_roundangle_white"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x128"
            android:text="邀请成为教练"
            android:textSize="@dimen/x52"
            android:textColor="#FFFFFF"
            android:onClick="inviteToCoach"
            android:layout_marginLeft="@dimen/x64"
            android:background="@drawable/bg_bt_rec_roundangle"
            />
    </LinearLayout>


</RelativeLayout>
