<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.amsu.healthy.activity.ClubHomePageActivity">

    <RelativeLayout
        android:id="@+id/rl_toppicture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x432"
        android:background="@drawable/asport">

        <!--<ImageView
            android:id="@+id/iv_clubhome_back"
            android:layout_width="@dimen/y148"
            android:layout_height="@dimen/y148"
            android:layout_marginTop="@dimen/x30"
            android:paddingTop="@dimen/y48"
            android:paddingRight="@dimen/x48"
            android:paddingBottom="@dimen/x48"
            android:src="@drawable/back_icon"/>
        <ImageView
            android:id="@+id/iv_clubhome_notice"
            android:layout_width="@dimen/y148"
            android:layout_height="@dimen/y148"
            android:padding="@dimen/y48"
            android:layout_marginTop="@dimen/x20"
            android:layout_alignParentRight="true"
            android:src="@drawable/jul_tz"/>-->

        <TextView
            android:id="@+id/tv_clubhome_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0成员"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x52"
            android:layout_marginLeft="@dimen/x36"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x28"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0动态"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/tv_clubhome_number"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x52"
            android:layout_marginLeft="@dimen/x40"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x28"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textStyle="bold"
            android:layout_above="@+id/tv_clubhome_number"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginBottom="@dimen/x32"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x48"/>

        <RelativeLayout
            android:id="@+id/rl_homepage_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x52"
            android:layout_marginRight="@dimen/x36">
            <TextView
                android:id="@+id/tv_clubhome_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排行榜"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x32"/>
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/phb_icon"
                android:layout_toLeftOf="@+id/tv_clubhome_rank"
                android:layout_marginRight="@dimen/x24"/>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_detial_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_below="@+id/rl_toppicture"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/rl_detial_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:src="@drawable/jlb_cy"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成员"
                android:layout_below="@+id/image1"
                android:layout_marginTop="@dimen/x28"
                android:textSize="@dimen/x28"
                android:textColor="#555555"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_detial_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:src="@drawable/jlb_hd"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动"
                android:layout_below="@+id/image2"
                android:layout_marginTop="@dimen/x28"
                android:textSize="@dimen/x28"
                android:textColor="#555555"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_detial_group"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:src="@drawable/jlb_xz"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小组"
                android:layout_below="@+id/image3"
                android:layout_marginTop="@dimen/x28"
                android:textSize="@dimen/x28"
                android:textColor="#555555"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_detial_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/image4"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:src="@drawable/jlb_more"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_below="@+id/image4"
                android:layout_marginTop="@dimen/x28"
                android:textSize="@dimen/x28"
                android:textColor="#555555"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x36"
        android:background="#F3F3F3"
        android:layout_below="@+id/ll_detial_bottom"></View>
</RelativeLayout>
