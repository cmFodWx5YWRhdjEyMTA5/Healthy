<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amsu.healthy.activity.ConnectToWifiGudieActivity1"
    android:background="#FFF">

    <include layout="@layout/page_head"
        android:id="@+id/rl_base_head">
    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x108"
        android:layout_gravity="center_horizontal"
        android:text="1、将设备置于WiFi环境中，将手机连接至设备WiFi。\nWiFi名称：AmsuCharge"
        android:textSize="@dimen/x40"
        android:textColor="#4d4d4d"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"/>

    <ImageView
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x400"
        android:layout_marginTop="@dimen/x92"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/wifi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x180"
        android:layout_gravity="center_horizontal"
        android:text="2、连接至设备WiFi后点击确定下一步，输入你要让主机连接的WiFi账号和密码"
        android:textSize="@dimen/x40"
        android:textColor="#4d4d4d"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:background="@drawable/bg_bt_rec_roundangle"
        android:text="@string/next_step"
        android:onClick="nextStep"
        android:textSize="@dimen/x48"
        android:textColor="#f5f5f5"
        android:layout_marginTop="@dimen/x300"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>
