<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_club_number_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.activity.ClubNumberRankActivity">


    <include layout="@layout/page_head"
        android:id="@+id/rl_base_head">
    </include>

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_below="@+id/rl_base_head"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名次"
            android:textColor="#999999"
            android:textSize="@dimen/x28"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="里程"
            android:textColor="#999999"
            android:textSize="@dimen/x28"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_number_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:background="#FFFFFF"
        android:dividerHeight="@dimen/x1"
        android:layout_below="@+id/rl_top">
    </ListView>


</RelativeLayout>
