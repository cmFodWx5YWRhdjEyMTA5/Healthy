<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y172"
        android:gravity="center_vertical">
        <!--<com.amsu.healthy.view.RoundRectImageView
            android:id="@+id/iv_clubs_image"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/x36"
            android:src="@drawable/home_wd"/>-->

        <TextView
            android:id="@+id/tv_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x36"
            android:text="2016年10月6日"
            android:textColor="#333333"
            android:maxLines="2"
            android:textSize="@dimen/x40" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x36"
            android:layout_below="@+id/tv_history_date"
            android:layout_marginTop="@dimen/x20">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:src="@drawable/clock"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x16"
                android:text="18:56:00"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/x40" />
            <TextView
                android:id="@+id/tv_history_sportstate"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x36"
                android:gravity="center"
                android:layout_toRightOf="@id/tv_history_time"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:text="状态"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_lishi1"
                android:textSize="@dimen/x24" />
        </RelativeLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_history_alstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x36"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="已分析"
        android:textColor="#CCCCCC"
        android:textSize="@dimen/x40"/>

</RelativeLayout>
