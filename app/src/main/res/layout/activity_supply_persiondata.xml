<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.amsu.healthy.activity.SupplyPersionDataActivity">

    <include layout="@layout/page_head"
        android:id="@+id/rl_base_head">
    </include>

    <EditText
        android:id="@+id/tv_step2_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="输入昵称"
        android:textColorHint="#b2b2b8"
        android:layout_below="@id/rl_base_head"
        android:layout_marginTop="@dimen/x112"
        android:layout_centerHorizontal="true"
        android:textColor="#0c64b5"
        android:textSize="@dimen/x69"/>

    <LinearLayout
        android:id="@+id/ll_step2_chooose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_step2_username"
        android:divider="@drawable/deiver_horiz_line"
        android:showDividers="middle|end"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36">

        <RelativeLayout
            android:id="@+id/rl_step2_birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140"
            android:layout_marginTop="@dimen/x120">
            <TextView
                android:id="@+id/tv_step2_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择生日"
                android:textColor="#b2b2b8"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_icon"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_step2_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140">
            <TextView
                android:id="@+id/tv_step2_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择性别"
                android:textColor="#b2b2b8"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_icon"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_step2_weight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140">
            <TextView
                android:id="@+id/tv_step2_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择体重"
                android:textColor="#b2b2b8"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_icon"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_step2_height"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140">
            <TextView
                android:id="@+id/tv_step2_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择身高"
                android:textColor="#b2b2b8"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_icon"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_step2_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140">
            <TextView
                android:id="@+id/tv_step2_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择地区"
                android:textColor="#b2b2b8"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_icon"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/t_step_nextstep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x128"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:layout_below="@id/ll_step2_chooose"
        android:layout_marginTop="@dimen/y72"
        android:textColor="#f5f5f5"
        android:textSize="@dimen/x48"
        android:background="@drawable/bg_bt_rec"
        android:text="下一步"/>



</RelativeLayout>
