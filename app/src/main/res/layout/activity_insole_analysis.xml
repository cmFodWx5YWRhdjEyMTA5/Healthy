        android:textColor="#0c64b5"
        android:textSize="@dimen/x36"
        android:layout_marginTop="@dimen/y36"/>

    <RelativeLayout
        android:id="@+id/rl_heartrate_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y600"
