<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_club_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context="com.amsu.healthy.activity.ClubHomePageActivity">



    <ListView
        android:id="@+id/lv_homepage_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null">
    </ListView>

    <!--android:layout_height="@dimen/y230"-->
    <RelativeLayout
        android:id="@+id/rl_base_head_club_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y188"
        android:background="#212121">
        <ImageView
            android:id="@+id/iv_base_leftimage"
            android:layout_width="@dimen/y52"
            android:layout_height="@dimen/y52"
            android:layout_marginLeft="@dimen/x36"
            android:src="@drawable/back_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y40"/>
        <TextView
            android:id="@+id/tv_base_centerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俱乐部动态"
            android:textSize="@dimen/x52"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y30" />
        <ImageView
            android:id="@+id/iv_base_rightimage"
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/x52"
            android:layout_marginRight="@dimen/x36"
            android:src="@drawable/jul_tz"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y40"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_homepage_add"
        android:layout_width="@dimen/x140"
        android:layout_height="@dimen/x140"
        android:background="@drawable/bg_bt_bigcircle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x36"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x56">
        <ImageView
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/x52"
            android:layout_centerInParent="true"
            android:src="@drawable/jlb_fbxdt"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_homepage_jionclub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x128"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bt_rec">
        <TextView
            android:id="@+id/tv_club_detial_jion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入俱乐部"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"/>
        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/home_tjsb_icon"
            android:layout_toLeftOf="@+id/tv_club_detial_jion"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x2"/>
    </RelativeLayout>

</RelativeLayout>
