<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x180"
    android:padding="@dimen/x36"
    >
    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="@dimen/x104"
        android:layout_height="@dimen/x104"
        android:layout_centerVertical="true"
        android:src="@drawable/yifu_icon"/>
    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动衣"
        android:textSize="@dimen/x48"
        android:textColor="#383838"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_item_icon"
        android:layout_marginLeft="@dimen/x40"/>
    <TextView
        android:id="@+id/tv_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/x48"
        android:textColor="#c7c7cc"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>