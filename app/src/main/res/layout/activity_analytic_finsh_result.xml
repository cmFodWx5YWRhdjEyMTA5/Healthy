<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.activity.insole.InsoleAnalyticFinshResultActivity">

    <include layout="@layout/page_head"
        android:id="@+id/rl_base_head">
    </include>

    <LinearLayout
        android:id="@+id/ll_analysis_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y128"
        android:orientation="horizontal"
        android:background="#212121"
        android:layout_below="@id/rl_base_head">
        <TextView
            android:id="@+id/tv_report_track"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="轨迹"
            android:textColor="#0c64b5"
            android:gravity="center"
            android:textSize="@dimen/x48"/>
        <TextView
            android:id="@+id/tv_report_details"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="详情"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="@dimen/x48"/>
        <TextView
            android:id="@+id/tv_report_speed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="配速"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="@dimen/x48"/>

        <TextView
            android:id="@+id/tv_report_stride"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="步态"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="@dimen/x48"/>
    </LinearLayout>

    <View
        android:id="@+id/v_analysis_select"
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/x4"
        android:layout_below="@id/rl_base_head"
        android:layout_marginTop="@dimen/y124"
        android:background="#0c64b5"></View>

    <!--<FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_analysis_title"
        >
    </FrameLayout>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_insoleresult_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_analysis_title"
        >
    </android.support.v4.view.ViewPager>

</RelativeLayout>
