<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    xmlns:foldlineview="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_ecgmouth_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:background="@drawable/list_item_background">
        <TextView
            android:id="@+id/tv_ecgmouth_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly_hrr_report"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x46"/>
        <TextView
            android:id="@+id/tv_hrrmouth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016/12"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/x46"/>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:layout_below="@id/rl_ecgmouth_text"
        android:background="#d3d3d3"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y820"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/x40"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="@dimen/x228"
            android:layout_height="@dimen/x140"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_shadow"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_mouth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#000000"
                android:textSize="@dimen/x52"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_mouth_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:layout_below="@+id/tv_mouth_value"
                android:text=""
                android:textColor="#818181"
                android:textSize="@dimen/x28"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <com.amsu.healthy.view.FoldLineViewWithPoint
            android:id="@+id/spread_line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x10"
            android:layout_below="@+id/view"
            android:background="#FFFFFF"
            foldlineview:line_color="#FF0000"
            foldlineview:line_width="@dimen/x6"
            foldlineview:radius_point="@dimen/x8"
            foldlineview:radius_point_big="@dimen/x12"/>
    </LinearLayout>

</RelativeLayout>
