<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x672"
        android:background="#f6f6f6"
        android:src="@drawable/treadmill">
    </ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="室内跑步"
        android:layout_marginTop="@dimen/x92"
        android:textColor="#000000"
        android:textSize="@dimen/x70"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x48"
        android:gravity="center">
        <View
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/x16"
            android:background="@drawable/bg_view_circle_grid"></View>

        <View
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/x16"
            android:layout_marginLeft="@dimen/x24"
            android:background="@drawable/bg_view_circle_black"></View>
    </LinearLayout>





</LinearLayout>
