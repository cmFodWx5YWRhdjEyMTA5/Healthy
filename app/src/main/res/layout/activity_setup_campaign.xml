<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.activity.SetupCampaignActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/x128"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:onClick="submit"
        android:textColor="#f5f5f5"
        android:textSize="@dimen/x48"
        android:background="@drawable/bg_bt_rec_roundangle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="提交"/>

    <LinearLayout
        android:id="@+id/activity_setup_campaign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/page_head"
            android:id="@+id/rl_base_head">
        </include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x50"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:layout_centerVertical="true"
                android:textColor="#555555"
                android:textSize="@dimen/x40"/>
            <EditText
                android:id="@+id/et_campaign_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入"
                android:layout_toRightOf="@+id/text1"
                android:layout_marginLeft="@dimen/x40"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:background="@null"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动类型"
                android:layout_centerVertical="true"
                android:textColor="#555555"
                android:textSize="@dimen/x40"/>
            <EditText
                android:id="@+id/et_campaign_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="如马拉松"
                android:layout_toRightOf="@+id/text2"
                android:layout_marginLeft="@dimen/x40"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:background="@null"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动日期"
                android:layout_centerVertical="true"
                android:textColor="#555555"
                android:textSize="@dimen/x40"/>
            <EditText
                android:id="@+id/et_campaign_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="如2016.1.1"
                android:layout_toRightOf="@+id/text3"
                android:layout_marginLeft="@dimen/x40"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:background="@null"
                android:onClick="chooseDate"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动时间"
                android:layout_centerVertical="true"
                android:textColor="#555555"
                android:textSize="@dimen/x40"/>
            <EditText
                android:id="@+id/et_campaign_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="如10:00-12:00"
                android:layout_toRightOf="@+id/text4"
                android:layout_marginLeft="@dimen/x40"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:onClick="chooseTimeDialog"
                android:background="@null"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">
            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动总人数"
                android:layout_centerVertical="true"
                android:textColor="#555555"
                android:textSize="@dimen/x40"/>
            <EditText
                android:id="@+id/et_campaign_allnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="如100"
                android:layout_toRightOf="@+id/text8"
                android:layout_marginLeft="@dimen/x40"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:background="@null"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x128"
                android:text="概述"
                android:textSize="@dimen/x40"
                android:gravity="center_vertical"
                android:textColor="#555555"/>
            <EditText
                android:id="@+id/et_campaign_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入"
                android:layout_below="@+id/text5"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:background="@null"
                android:lines="5"
                android:gravity="top"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">
            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名时是否需要填写手机号"
                android:layout_centerVertical="true"
                android:textColor="#555555"
                android:textSize="@dimen/x40"/>
            <ImageView
                android:id="@+id/iv_campaign_switvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x48"
                android:onClick="switchState"
                android:src="@drawable/switch_of"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x36"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">
            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动参与协议"
                android:layout_centerVertical="true"
                android:textColor="#555555"
                android:textSize="@dimen/x40"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="编辑协议"
                android:layout_toRightOf="@+id/text7"
                android:layout_marginLeft="@dimen/x40"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:background="@null"
                android:onClick="editprotocol"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>

