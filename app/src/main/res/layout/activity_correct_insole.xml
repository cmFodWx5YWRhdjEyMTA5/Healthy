<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.activity.insole.CorrectInsoleActivity">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="静态校准"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/x64"
        android:layout_marginTop="@dimen/y140"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:text="校准时，请保持双脚与肩同宽站立，大概5秒，校准后才能进行正常使用步态分析"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/x36"
        android:layout_marginTop="@dimen/y40"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/iv_img1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:src="@drawable/jtjz"
        android:layout_marginTop="@dimen/x220"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_correct_insole1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img1"
        android:layout_marginLeft="@dimen/x72"
        android:layout_marginTop="@dimen/x100"
        android:text="鞋垫1进度："/>

    <TextView
        android:id="@+id/tv_correct_insole2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_correct_insole1"
        android:layout_marginLeft="@dimen/x72"
        android:layout_marginTop="@dimen/x10"
        android:text="鞋垫2进度："/>

    <TextView
        android:id="@+id/tv_correct_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_below="@+id/iv_img1"
        android:text="开始"
        android:textColor="#0c64b5"
        android:textSize="@dimen/x64"
        android:layout_marginTop="@dimen/y492"
        android:padding="@dimen/x40"
        android:onClick="startCorrect"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
