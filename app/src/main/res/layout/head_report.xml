<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y128"
    android:background="#FFFFFF"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_report_text1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="心率"
        android:textColor="#0c64b5"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_select_text"
        android:textSize="@dimen/x48"/>
    <TextView
        android:id="@+id/tv_report_text2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="心电"
        android:layout_margin="10dp"
        android:textColor="#999999"
        android:gravity="center"
        android:background="@drawable/bg_noselest_text"
        android:textSize="@dimen/x48"/>
    <TextView
        android:id="@+id/tv_report_text3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="HRR"
        android:layout_margin="10dp"
        android:background="@drawable/bg_noselest_text"
        android:textColor="#999999"
        android:gravity="center"
        android:textSize="@dimen/x48"/>
    <TextView
        android:id="@+id/tv_report_text4"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="HRV"
        android:background="@drawable/bg_noselest_text"
        android:layout_margin="10dp"
        android:textColor="#999999"
        android:gravity="center"
        android:textSize="@dimen/x48"
        android:visibility="gone"/>
</LinearLayout>