<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y128"
        android:background="@color/app_top_background_color">

        <ImageView
            android:id="@+id/iv_base_leftimage"
            android:layout_width="@dimen/y188"
            android:layout_height="@dimen/y128"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/y38"
            android:paddingRight="@dimen/x70"
            android:paddingTop="@dimen/y38"
            android:src="@drawable/back_icon" />

        <LinearLayout
            android:id="@+id/buttonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sportRecordDetailsStatistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="统计"
                android:textColor="@color/btn_text_color_white"
                android:textSize="@dimen/x48" />

            <TextView
                android:id="@+id/sportRecordDetailsSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x154"
                android:padding="8dip"
                android:text="配速"
                android:textColor="@color/btn_text_color_white"
                android:textSize="@dimen/x48" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
