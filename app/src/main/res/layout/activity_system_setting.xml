<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.activity.SystemSettingActivity">

    <include layout="@layout/page_head"
        android:id="@+id/rl_base_head">
    </include>

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_base_head"
        android:divider="@drawable/deiver_horiz_line"
        android:showDividers="middle"
        android:orientation="vertical"
        android:background="#FFFFFF">


        <RelativeLayout
            android:id="@+id/rl_persiondata_persiondata"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y140"
            android:clickable="true"
            android:background="@drawable/list_item_background"
            android:paddingLeft="@dimen/x36"
            android:paddingRight="@dimen/x40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:textColor="#030303"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_persion_2"
                android:layout_width="@dimen/x56"
                android:layout_height="@dimen/x56"
                android:src="@drawable/more_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_persiondata_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9f9f9f"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_persion_2"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_persiondata_device"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y140"
            android:background="@drawable/list_item_background"
            android:paddingLeft="@dimen/x36"
            android:paddingRight="@dimen/x40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的设备"
                android:textColor="#030303"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_persion_3"
                android:layout_width="@dimen/x56"
                android:layout_height="@dimen/x56"
                android:src="@drawable/more_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_persiondata_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9f9f9f"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_persion_3"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_persiondata_running"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y140"
            android:background="@drawable/list_item_background"
            android:paddingLeft="@dimen/x36"
            android:paddingRight="@dimen/x40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备运行"
                android:textColor="#030303"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_persion_4"
                android:layout_width="@dimen/x56"
                android:layout_height="@dimen/x56"
                android:src="@drawable/more_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_persiondata_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9f9f9f"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_persion_4"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_persiondata_update"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y140"
            android:background="@drawable/list_item_background"
            android:paddingLeft="@dimen/x36"
            android:paddingRight="@dimen/x40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统更新"
                android:textColor="#030303"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_persion_5"
                android:layout_width="@dimen/x56"
                android:layout_height="@dimen/x56"
                android:src="@drawable/more_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_persiondata_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9f9f9f"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_persion_5"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_persiondata_aboutus"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y140"
            android:background="@drawable/list_item_background"
            android:paddingLeft="@dimen/x36"
            android:paddingRight="@dimen/x40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textColor="#030303"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_persion_6"
                android:layout_width="@dimen/x56"
                android:layout_height="@dimen/x56"
                android:src="@drawable/more_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_persiondata_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9f9f9f"
                android:textSize="@dimen/x48"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_persion_6"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_persiondata_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:layout_below="@+id/ll_item"
        android:background="@drawable/list_item_background"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/x40"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="#030303"
            android:textSize="@dimen/x48"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>
