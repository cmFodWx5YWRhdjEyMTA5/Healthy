<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y128"
    android:background="#212121">


    <ImageView
        android:id="@+id/iv_base_leftimage"
        android:layout_width="@dimen/y188"
        android:layout_height="@dimen/y128"
        android:paddingTop="@dimen/y38"
        android:paddingBottom="@dimen/y38"
        android:paddingRight="@dimen/x70"
        android:src="@drawable/back_icon"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_base_centerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="倾听体语"
        android:textSize="@dimen/x52"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/tv_base_lefttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left"
        android:layout_marginLeft="@dimen/x36"
        android:textSize="@dimen/x48"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_base_rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right"
        android:textSize="@dimen/x48"
        android:textColor="#FFFFFF"
        android:layout_marginRight="@dimen/x36"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_base_rightimage"
        android:layout_width="@dimen/y128"
        android:layout_height="@dimen/y128"
        android:paddingTop="@dimen/y38"
        android:paddingBottom="@dimen/y38"
        android:layout_marginRight="@dimen/x36"
        android:src="@drawable/back_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout>