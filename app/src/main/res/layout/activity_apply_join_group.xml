<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apply_join_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.healthy.activity.ApplyJoinGroupActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/x128"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:onClick="submit"
        android:textColor="#f5f5f5"
        android:textSize="@dimen/x48"
        android:background="@drawable/bg_bt_rec_roundangle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="提交申请"/>

    <LinearLayout
        android:id="@+id/activity_setup_jiongroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/page_head"
            android:id="@+id/rl_base_head">
        </include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x50"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_centerVertical="true"
                android:textColor="#555555"
                android:textSize="@dimen/x40"/>
            <TextView
                android:id="@+id/et_jiongroup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="小爱"
                android:layout_toRightOf="@+id/text1"
                android:layout_marginLeft="@dimen/x40"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:background="@null"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_input"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginLeft="@dimen/x36"
            android:paddingLeft="@dimen/x36">

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x128"
                android:text="申请理由"
                android:textSize="@dimen/x40"
                android:gravity="center_vertical"
                android:textColor="#555555"/>
            <EditText
                android:id="@+id/et_jiongroup_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入"
                android:layout_below="@+id/text5"
                android:textColor="#999999"
                android:textSize="@dimen/x40"
                android:background="@null"
                android:lines="5"
                android:gravity="top"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
