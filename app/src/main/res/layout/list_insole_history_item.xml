<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y172"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_insolehistory_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x36"
                android:text="5.02"
                android:textColor="#000000"
                android:maxLines="2"
                android:textSize="@dimen/x72" />
            <TextView
                android:id="@+id/tv_test0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KM"
                android:textSize="@dimen/x48"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/tv_insolehistory_km"
                android:layout_marginLeft="@dimen/x20"
                android:layout_alignBaseline="@+id/tv_insolehistory_km"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_insolehistory_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:30:00"
                android:textSize="@dimen/x48"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/tv_test0"
                android:layout_marginLeft="@dimen/x40"
                android:layout_alignBaseline="@+id/tv_insolehistory_km"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_insolehistory_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x36"
                android:layout_below="@+id/tv_insolehistory_km"
                android:layout_marginTop="@dimen/x10"
                android:layout_centerVertical="true"
                android:text="2016-10-06 18:56"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/x40" />




        </RelativeLayout>

        <ImageView
            android:id="@+id/tv_history_alstate"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/x56"
            android:layout_marginRight="@dimen/x36"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/more_icon"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y172"
        android:background="@android:color/holo_red_light">
        <!--<ImageView
            android:id="@+id/iv_test"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:src="@drawable/del_icon_normal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x60"/>-->
        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="删除"
            android:textColor="#FFF"
            android:layout_marginLeft="@dimen/x10"/>
    </RelativeLayout>

</LinearLayout>

