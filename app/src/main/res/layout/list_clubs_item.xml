<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x212">
    <com.amsu.healthy.view.RoundRectImageView
        android:id="@+id/iv_clubs_image"
        android:layout_width="@dimen/x144"
        android:layout_height="@dimen/x144"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/x34"
        android:layout_marginBottom="@dimen/x34"
        android:src="@drawable/a"/>

    <TextView
        android:id="@+id/tv_clubs_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/x34"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x32"
        android:layout_toRightOf="@id/iv_clubs_image"
        android:text="名称"
        android:textColor="#333333"
        android:maxLines="2"
        android:textSize="@dimen/x48" />

    <TextView
        android:id="@+id/tv_clubs_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_clubs_image"
        android:text="成员数：0"
        android:layout_marginLeft="@dimen/x32"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/x30"
        android:textColor="#999999"
        android:textSize="@dimen/x28" />

    <TextView
        android:id="@+id/tv_clubs_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_clubs_image"
        android:text="铁人三项"
        android:layout_marginLeft="@dimen/x32"
        android:layout_below="@id/tv_clubs_name"
        android:layout_marginTop="@dimen/x10"
        android:textColor="#999999"
        android:textSize="@dimen/x28" />


</RelativeLayout>
