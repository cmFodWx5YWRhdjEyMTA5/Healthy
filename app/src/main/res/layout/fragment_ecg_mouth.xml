<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:piechart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="5dp"
    tools:context="com.amsu.healthy.fragment.report.EcgMouthFragment">


    <RelativeLayout
        android:id="@+id/rl_ecgmouth_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:background="@drawable/list_item_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月度心电报告"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x46"/>
        <TextView
            android:id="@+id/tv_ecgmouth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016/12"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/x46"/>

    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_ecgmouth_text"
        android:background="#d3d3d3"></View>


    <com.amsu.healthy.view.PieChart
        android:id="@+id/pc_ecg_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y500"
        android:layout_marginTop="17dp"
        piechart:part1_color="#00a352"
        piechart:part2_color="#f15a24"
        piechart:part3_color="#f5a623"
        piechart:part4_color="#5c4eaf"
        piechart:ring_width="@dimen/x158"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pc_ecg_chart"
        android:paddingTop="@dimen/x114"
        android:paddingBottom="@dimen/x50"
        android:paddingLeft="@dimen/x50"
        android:paddingRight="@dimen/x50"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <View
                android:id="@+id/iv_image1"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:background="#00a352"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:layout_toRightOf="@+id/iv_image1"
                android:textSize="@dimen/x40"
                android:textColor="#6b6b6b"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <View
                android:id="@+id/iv_image2"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:background="#f15a24"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="异常"
                android:layout_toRightOf="@+id/iv_image2"
                android:textSize="@dimen/x40"
                android:textColor="#6b6b6b"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <View
                android:id="@+id/iv_image3"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:background="#f5a623"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="漏博"
                android:layout_toRightOf="@+id/iv_image3"
                android:textSize="@dimen/x40"
                android:textColor="#6b6b6b"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <View
                android:id="@+id/iv_image4"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:background="#5c4eaf"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早搏"
                android:textSize="@dimen/x40"
                android:textColor="#6b6b6b"
                android:layout_toRightOf="@+id/iv_image4"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
