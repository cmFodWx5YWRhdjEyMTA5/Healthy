<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item
                android:bottom="0dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:color="@android:color/holo_green_light"
                        android:width="2dp" />
                    <padding android:bottom="4dp" />

                </shape>
            </item>

        </layer-list>
    </item>

    <item >
        <layer-list>
            <item
                android:bottom="0dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="#d3d3d3" />
                    <padding android:bottom="4dp" />
                </shape>
            </item>


        </layer-list>
    </item>
</selector>